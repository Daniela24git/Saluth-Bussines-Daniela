<!-- MAIN CONTECT -->
<div class="main_contect">
  <main class="main_app">
    <section>
      <h2 id="title_view" class="hidden">Perfil</h2>
      <h2 id="title_view_profile" class=" hidden">Seguridad</h2>
    </section>

    <div class="profile_grid">
      <section class="profile_edit">
        {{>profile/navegation}}
        <div class="profile_settings">
          <form action="/api/profile/update/user/{{user._id}}" method="POST">
            <section class="section_form_profile">
              <div class="title_section_form">
                <h5>Cuenta:</h5>
              </div>
              <div class="container_inputs">
                <div class="data_username">
                  <label for="username">Usuario</label>
                  <input name="username" class="input" id="username" type="text" autocomplete="off" required
                    value="{{user.username}}" />
                </div>
                <div class="data_role">
                  <label for="role">Rol</label>
                  <input name="role" class="input" id="role" type="text" autocomplete="off" required disabled
                    value="{{user.role.name}}" />
                </div>
                <div class="data_correo">
                  <label for="email">Correo electronico</label>
                  <input name="email" class="input" id="email" type="email" autocomplete="off" required
                    value="{{user.email}}" />
                </div>
              </div>
            </section>

            <section class="section_form_profile">
              <div class="title_section_form">
                <h5>Cambiar Contrase単a:</h5>
              </div>
              <div class="container_inputs">
                <div class="data_password">
                  <label for="password">Contrase単a Actual</label>
                  <input name="password" class="input" id="password" type="password" autocomplete="off" />
                </div>
                <div class="data_new_password">
                  <label for="newPassword">Nueva Contrase単a</label>
                  <input name="newPassword" class="input" id="newPassword" type="password" autocomplete="off"  />
                </div>
                <div class="data_confirm_password">
                  <label for="confirmPassword">Confirmar Contrase単a</label>
                  <input name="confirmPassword" class="input" id="confirmPassword" type="password" autocomplete="off"  />
                </div>
              </div>
            </section>

            <div class="buttons_form_profile">
              <button class="btn btn-secondary disabled" id="button_security" type="submit">
                <div>
                  <span class="fa-solid fa-floppy-disk"></span> Actualizar
                </div>
              </button>
            </div>
          </form>
        </div>
      </section>
      {{>profile/preview_profile}}
    </div>
  </main>
</div>